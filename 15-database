#Task 1
import sqlite3
conn = sqlite3.connect("database/library.db")
cur = conn.cursor()
cur.execute("""
CREATE TABLE IF NOT EXISTS books (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            title TEXT NOT NULL,
            author TEXT NOT NULL,
            year INTEGER NOT NULL
            )  
""")
conn.close()

#Task 2
import sqlite3
conn = sqlite3.connect("database/library.db")
cur = conn.cursor()

books_info = [
("Python Basics", "John Smith", 2020),
("SQL for Beginners", "Alice Brown", 2018),
("Data Science Guide", "Michael Clark", 2021)
]

cur.executemany("INSERT INTO books (title, author, year) VALUES (?,?,?)", books_info)
conn.commit()
conn.close()

#Task 3
import sqlite3
conn = sqlite3.connect("database/library.db")
cur = conn.cursor()
cur.execute("SELECT * FROM books")
books_list = cur.fetchall()

for book in books_list:
    print(book)

conn.close()

#Task 4
import sqlite3
conn = sqlite3.connect("database/library.db")
cur = conn.cursor()
author_search_value = input("Type author name you are searching for: ")
cur.execute("SELECT * FROM books WHERE author = ?", (author_search_value,))

author = cur.fetchone()
print(author)

#Task 5
import sqlite3
conn = sqlite3.connect("database/library.db")
cur = conn.cursor()

cur.execute("UPDATE books SET year = ? WHERE title = ?", (2019, "SQL for Beginners"))
conn.commit()

cur.execute("SELECT * FROM books WHERE title = ?", ("SQL for Beginners",))
book = cur.fetchone()
print(book)

conn.close()
